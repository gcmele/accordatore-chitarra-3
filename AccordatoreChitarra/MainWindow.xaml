<Window x:Class="AccordatoreChitarra.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Accordatore Chitarra" 
        Height="900" 
        Width="800"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Tuning Peg Style -->
        <Style x:Key="TuningPegStyle" TargetType="Border">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="BorderBrush" Value="#34495E"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- Tuning Peg Text Style -->
        <Style x:Key="TuningPegTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#ECF0F1"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Active Peg Style -->
        <Style x:Key="ActivePegStyle" TargetType="Border" BasedOn="{StaticResource TuningPegStyle}">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="BorderBrush" Value="#2ECC71"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Accordatore Chitarra"
                   FontSize="32"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Foreground="{DynamicResource MaterialDesignBody}"/>

        <!-- Headstock Visualization with Tuning Pegs -->
        <materialDesign:Card Grid.Row="1" 
                            Padding="20"
                            Margin="0,0,0,20"
                            Background="{DynamicResource MaterialDesignCardBackground}">
            <StackPanel>
                <TextBlock Text="Corde"
                          FontSize="18"
                          FontWeight="SemiBold"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,15"/>
                
                <!-- Tuning Pegs Grid -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 6th String - E (Low E) -->
                    <Border x:Name="PegE" Grid.Column="0" Style="{StaticResource TuningPegStyle}">
                        <StackPanel>
                            <TextBlock Text="E" Style="{StaticResource TuningPegTextStyle}"/>
                            <TextBlock Text="82.41 Hz" FontSize="10" Foreground="#BDC3C7" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- 5th String - A -->
                    <Border x:Name="PegA" Grid.Column="1" Style="{StaticResource TuningPegStyle}">
                        <StackPanel>
                            <TextBlock Text="A" Style="{StaticResource TuningPegTextStyle}"/>
                            <TextBlock Text="110.00 Hz" FontSize="10" Foreground="#BDC3C7" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- 4th String - D -->
                    <Border x:Name="PegD" Grid.Column="2" Style="{StaticResource TuningPegStyle}">
                        <StackPanel>
                            <TextBlock Text="D" Style="{StaticResource TuningPegTextStyle}"/>
                            <TextBlock Text="146.83 Hz" FontSize="10" Foreground="#BDC3C7" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- 3rd String - G -->
                    <Border x:Name="PegG" Grid.Column="3" Style="{StaticResource TuningPegStyle}">
                        <StackPanel>
                            <TextBlock Text="G" Style="{StaticResource TuningPegTextStyle}"/>
                            <TextBlock Text="196.00 Hz" FontSize="10" Foreground="#BDC3C7" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- 2nd String - B -->
                    <Border x:Name="PegB" Grid.Column="4" Style="{StaticResource TuningPegStyle}">
                        <StackPanel>
                            <TextBlock Text="B" Style="{StaticResource TuningPegTextStyle}"/>
                            <TextBlock Text="246.94 Hz" FontSize="10" Foreground="#BDC3C7" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- 1st String - e (High E) -->
                    <Border x:Name="Pege" Grid.Column="5" Style="{StaticResource TuningPegStyle}">
                        <StackPanel>
                            <TextBlock Text="e" Style="{StaticResource TuningPegTextStyle}"/>
                            <TextBlock Text="329.63 Hz" FontSize="10" Foreground="#BDC3C7" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </materialDesign:Card>

        <!-- Frequency and Cents Display -->
        <materialDesign:Card Grid.Row="2" 
                            Padding="20"
                            Margin="0,0,0,20"
                            Background="{DynamicResource MaterialDesignCardBackground}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Frequency Display -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="Frequenza"
                              FontSize="14"
                              Foreground="{DynamicResource MaterialDesignBodyLight}"
                              HorizontalAlignment="Center"/>
                    <TextBlock x:Name="FrequencyDisplay"
                              Text="-- Hz"
                              FontSize="36"
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                </StackPanel>

                <!-- Cents Offset Display -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="Centesimi"
                              FontSize="14"
                              Foreground="{DynamicResource MaterialDesignBodyLight}"
                              HorizontalAlignment="Center"/>
                    <TextBlock x:Name="CentsDisplay"
                              Text="0"
                              FontSize="36"
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Tuning Indicator Bar -->
        <materialDesign:Card Grid.Row="3" 
                            Padding="20"
                            Margin="0,0,0,20"
                            Background="{DynamicResource MaterialDesignCardBackground}">
            <StackPanel>
                <TextBlock Text="Indicatore di Accordatura"
                          FontSize="16"
                          FontWeight="SemiBold"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,15"/>

                <!-- Tuning Bar Container -->
                <Grid Height="100" Margin="0,10">
                    <!-- Background Bar -->
                    <Border Background="#ECEFF1" 
                           CornerRadius="10"
                           Height="40"
                           VerticalAlignment="Center"/>

                    <!-- Color Zones -->
                    <Grid Height="40" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#E74C3C" CornerRadius="10,0,0,10" Opacity="0.6"/>
                        <Border Grid.Column="1" Background="#27AE60" Opacity="0.6"/>
                        <Border Grid.Column="2" Background="#E74C3C" CornerRadius="0,10,10,0" Opacity="0.6"/>
                    </Grid>

                    <!-- Center Line -->
                    <Rectangle Width="4" 
                              Fill="#2C3E50"
                              HorizontalAlignment="Center"
                              Height="60"/>

                    <!-- Tuning Needle -->
                    <Canvas x:Name="TuningCanvas" Height="100">
                        <Path x:Name="TuningNeedle"
                             Fill="#E67E22"
                             Stroke="#D35400"
                             StrokeThickness="2"
                             Data="M 0,0 L 10,20 L -10,20 Z"
                             RenderTransformOrigin="0.5,0">
                            <Path.RenderTransform>
                                <TranslateTransform x:Name="NeedleTransform" X="0" Y="40"/>
                            </Path.RenderTransform>
                        </Path>
                    </Canvas>
                </Grid>

                <!-- Tuning Labels -->
                <Grid Margin="0,10,0,0">
                    <TextBlock Text="Troppo Bassa" 
                              HorizontalAlignment="Left"
                              FontSize="12"
                              Foreground="#E74C3C"/>
                    <TextBlock Text="Accordata" 
                              HorizontalAlignment="Center"
                              FontSize="12"
                              FontWeight="Bold"
                              Foreground="#27AE60"/>
                    <TextBlock Text="Troppo Alta" 
                              HorizontalAlignment="Right"
                              FontSize="12"
                              Foreground="#E74C3C"/>
                </Grid>

                <!-- Vertical Level Meter -->
                <Grid Margin="0,30,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                              Text="Livello:"
                              VerticalAlignment="Center"
                              Margin="0,0,15,0"
                              FontSize="14"/>

                    <Border Grid.Column="1" 
                           Background="#ECEFF1"
                           Height="30"
                           CornerRadius="5">
                        <Grid>
                            <Rectangle x:Name="LevelMeter"
                                      Fill="{DynamicResource PrimaryHueMidBrush}"
                                      HorizontalAlignment="Left"
                                      Width="0"
                                      CornerRadius="5"/>
                        </Grid>
                    </Border>
                </Grid>
            </StackPanel>
        </materialDesign:Card>

        <!-- Microphone Selection -->
        <materialDesign:Card Grid.Row="4" 
                            Padding="20"
                            Margin="0,0,0,15"
                            Background="{DynamicResource MaterialDesignCardBackground}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Grid.Column="0"
                                        Kind="Microphone"
                                        Width="24"
                                        Height="24"
                                        VerticalAlignment="Center"
                                        Margin="0,0,15,0"
                                        Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                <ComboBox x:Name="MicrophoneComboBox"
                         Grid.Column="1"
                         materialDesign:HintAssist.Hint="Seleziona Microfono"
                         Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                         VerticalAlignment="Center">
                    <ComboBoxItem Content="Microfono Predefinito"/>
                    <ComboBoxItem Content="Microfono Interno"/>
                    <ComboBoxItem Content="Microfono Esterno"/>
                </ComboBox>
            </Grid>
        </materialDesign:Card>

        <!-- Gain Slider -->
        <materialDesign:Card Grid.Row="5" 
                            Padding="20"
                            Margin="0,0,0,15"
                            Background="{DynamicResource MaterialDesignCardBackground}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:PackIcon Grid.Column="0"
                                            Kind="VolumeHigh"
                                            Width="24"
                                            Height="24"
                                            VerticalAlignment="Center"
                                            Margin="0,0,15,0"
                                            Foreground="{DynamicResource PrimaryHueMidBrush}"/>

                    <TextBlock Grid.Column="1"
                              Text="Guadagno"
                              FontSize="14"
                              VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="2"
                              x:Name="GainValueDisplay"
                              Text="50%"
                              FontSize="14"
                              FontWeight="Bold"
                              VerticalAlignment="Center"
                              Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                </Grid>

                <Slider x:Name="GainSlider"
                       Grid.Row="1"
                       Minimum="0"
                       Maximum="100"
                       Value="50"
                       TickFrequency="10"
                       TickPlacement="BottomRight"
                       Style="{StaticResource MaterialDesignDiscreteSlider}"/>
            </Grid>
        </materialDesign:Card>

        <!-- Start/Stop Button -->
        <Button x:Name="StartStopButton"
                Grid.Row="6"
                Content="AVVIA"
                Height="60"
                FontSize="18"
                FontWeight="Bold"
                Style="{StaticResource MaterialDesignRaisedButton}"
                materialDesign:ButtonAssist.CornerRadius="10"
                Background="{DynamicResource PrimaryHueMidBrush}">
            <Button.CommandParameter>
                <materialDesign:PackIcon Kind="Play" Width="24" Height="24"/>
            </Button.CommandParameter>
        </Button>
    </Grid>
</Window>