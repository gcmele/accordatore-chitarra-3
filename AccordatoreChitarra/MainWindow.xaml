<Window x:Class="AccordatoreChitarra.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Accordatore Chitarra" 
        Height="700" 
        Width="900"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        FontFamily="{DynamicResource MaterialDesignFont}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    
    <Window.Resources>
        <!-- Guitar Peg Style -->
        <Style x:Key="TuningPegStyle" TargetType="Border">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Background" Value="#F5F5DC"/>
            <Setter Property="BorderBrush" Value="#8B4513"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="30"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="8" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Peg Style -->
        <Style x:Key="ActivePegStyle" TargetType="Border" BasedOn="{StaticResource TuningPegStyle}">
            <Setter Property="Background" Value="#FFD700"/>
            <Setter Property="BorderBrush" Value="#FF8C00"/>
            <Setter Property="BorderThickness" Value="3"/>
        </Style>

        <!-- Note Label Style -->
        <Style x:Key="NoteLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#8B4513"/>
        </Style>

        <!-- Frequency Label Style -->
        <Style x:Key="FrequencyLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#696969"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="ACCORDATORE CHITARRA" 
                   FontSize="32" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Foreground="{DynamicResource PrimaryHueMidBrush}"
                   Margin="0,0,0,20"/>

        <!-- Guitar Headstock with Tuning Pegs -->
        <Grid Grid.Row="1" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- E String (6th - Low E) -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                <Border x:Name="PegE" Style="{StaticResource TuningPegStyle}">
                    <StackPanel>
                        <TextBlock Text="E" Style="{StaticResource NoteLabelStyle}"/>
                        <TextBlock Text="82.4 Hz" Style="{StaticResource FrequencyLabelStyle}"/>
                    </StackPanel>
                </Border>
                <Ellipse Width="4" Height="30" Fill="#696969" Margin="0,5"/>
            </StackPanel>

            <!-- A String (5th) -->
            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                <Border x:Name="PegA" Style="{StaticResource TuningPegStyle}">
                    <StackPanel>
                        <TextBlock Text="A" Style="{StaticResource NoteLabelStyle}"/>
                        <TextBlock Text="110 Hz" Style="{StaticResource FrequencyLabelStyle}"/>
                    </StackPanel>
                </Border>
                <Ellipse Width="4" Height="30" Fill="#696969" Margin="0,5"/>
            </StackPanel>

            <!-- D String (4th) -->
            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                <Border x:Name="PegD" Style="{StaticResource TuningPegStyle}">
                    <StackPanel>
                        <TextBlock Text="D" Style="{StaticResource NoteLabelStyle}"/>
                        <TextBlock Text="146.8 Hz" Style="{StaticResource FrequencyLabelStyle}"/>
                    </StackPanel>
                </Border>
                <Ellipse Width="4" Height="30" Fill="#696969" Margin="0,5"/>
            </StackPanel>

            <!-- G String (3rd) -->
            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                <Border x:Name="PegG" Style="{StaticResource TuningPegStyle}">
                    <StackPanel>
                        <TextBlock Text="G" Style="{StaticResource NoteLabelStyle}"/>
                        <TextBlock Text="196 Hz" Style="{StaticResource FrequencyLabelStyle}"/>
                    </StackPanel>
                </Border>
                <Ellipse Width="4" Height="30" Fill="#696969" Margin="0,5"/>
            </StackPanel>

            <!-- B String (2nd) -->
            <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                <Border x:Name="PegB" Style="{StaticResource TuningPegStyle}">
                    <StackPanel>
                        <TextBlock Text="B" Style="{StaticResource NoteLabelStyle}"/>
                        <TextBlock Text="246.9 Hz" Style="{StaticResource FrequencyLabelStyle}"/>
                    </StackPanel>
                </Border>
                <Ellipse Width="4" Height="30" Fill="#696969" Margin="0,5"/>
            </StackPanel>

            <!-- e String (1st - High E) -->
            <StackPanel Grid.Column="5" HorizontalAlignment="Center">
                <Border x:Name="PegHighE" Style="{StaticResource TuningPegStyle}">
                    <StackPanel>
                        <TextBlock Text="e" Style="{StaticResource NoteLabelStyle}"/>
                        <TextBlock Text="329.6 Hz" Style="{StaticResource FrequencyLabelStyle}"/>
                    </StackPanel>
                </Border>
                <Ellipse Width="4" Height="30" Fill="#696969" Margin="0,5"/>
            </StackPanel>
        </Grid>

        <!-- Main Tuning Area -->
        <Grid Grid.Row="2" Margin="0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="80"/>
            </Grid.ColumnDefinitions>

            <!-- Tuning Indicator Section -->
            <Border Grid.Column="0" 
                    Background="White" 
                    BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                    BorderThickness="2"
                    CornerRadius="10"
                    Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Current Note Display -->
                    <StackPanel Grid.Row="0" Margin="20,20,20,10" HorizontalAlignment="Center">
                        <TextBlock Text="Nota Rilevata" 
                                   FontSize="16" 
                                   Foreground="#696969"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="CurrentNoteText" 
                                   Text="--" 
                                   FontSize="48" 
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryHueMidBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="CurrentFrequencyText" 
                                   Text="0.0 Hz" 
                                   FontSize="16" 
                                   Foreground="#696969"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Tuning Indicator Bar -->
                    <Grid Grid.Row="1" Margin="40,20">
                        <!-- Background Bar -->
                        <Border Background="#F0F0F0" 
                                CornerRadius="10"
                                Height="60">
                            <Grid>
                                <!-- Flat Zone (Left) -->
                                <Rectangle Fill="#FFB6C1" 
                                          HorizontalAlignment="Left" 
                                          Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}, Converter={StaticResource WidthConverter}}"
                                          RadiusX="10" RadiusY="10"
                                          Opacity="0.3"/>
                                
                                <!-- Sharp Zone (Right) -->
                                <Rectangle Fill="#ADD8E6" 
                                          HorizontalAlignment="Right" 
                                          Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}, Converter={StaticResource WidthConverter}}"
                                          RadiusX="10" RadiusY="10"
                                          Opacity="0.3"/>
                                
                                <!-- Center Line (In Tune) -->
                                <Rectangle Fill="#32CD32" 
                                          Width="6" 
                                          HorizontalAlignment="Center"
                                          Opacity="0.5"/>
                                
                                <!-- Tuning Indicator Needle -->
                                <Canvas x:Name="TuningCanvas">
                                    <Line x:Name="TuningNeedle"
                                          X1="0" Y1="0"
                                          X2="0" Y2="60"
                                          Stroke="#FF4500"
                                          StrokeThickness="4"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"/>
                                </Canvas>
                            </Grid>
                        </Border>

                        <!-- Labels -->
                        <Grid VerticalAlignment="Bottom" Margin="0,0,0,-30">
                            <TextBlock Text="♭ CALANTE" 
                                       HorizontalAlignment="Left" 
                                       Foreground="#DC143C"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="ACCORDATO" 
                                       HorizontalAlignment="Center" 
                                       Foreground="#32CD32"
                                       FontWeight="Bold"/>
                            <TextBlock Text="CRESCENTE ♯" 
                                       HorizontalAlignment="Right" 
                                       Foreground="#1E90FF"
                                       FontWeight="SemiBold"/>
                        </Grid>
                    </Grid>

                    <!-- Cent Deviation Display -->
                    <StackPanel Grid.Row="2" Margin="20,10,20,20" HorizontalAlignment="Center">
                        <TextBlock x:Name="CentDeviationText" 
                                   Text="0 cent" 
                                   FontSize="20" 
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Foreground="#696969"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Level Meter -->
            <Border Grid.Column="1" 
                    Background="White"
                    BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                    BorderThickness="2"
                    CornerRadius="10">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="LIVELLO" 
                               FontSize="12" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="#696969"
                               Margin="0,0,0,10"/>

                    <!-- Level Bar Container -->
                    <Border Grid.Row="1" 
                            Background="#F0F0F0" 
                            CornerRadius="5"
                            Padding="5">
                        <Grid>
                            <!-- Level Bar -->
                            <Rectangle x:Name="LevelMeter"
                                      Fill="#32CD32"
                                      VerticalAlignment="Bottom"
                                      Height="0"
                                      RadiusX="3" RadiusY="3"/>
                            
                            <!-- Level Markers -->
                            <StackPanel VerticalAlignment="Stretch">
                                <Rectangle Height="1" Fill="#696969" Margin="0,0,0,20"/>
                                <Rectangle Height="1" Fill="#696969" Margin="0,0,0,20"/>
                                <Rectangle Height="1" Fill="#696969" Margin="0,0,0,20"/>
                                <Rectangle Height="1" Fill="#696969" Margin="0,0,0,20"/>
                                <Rectangle Height="1" Fill="#696969"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Control Panel -->
        <materialDesign:Card Grid.Row="3" 
                            Margin="0,20,0,0"
                            Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <!-- Microphone Selection -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,20,10">
                    <TextBlock Text="Microfono" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5"
                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    <ComboBox x:Name="MicrophoneComboBox"
                              materialDesign:HintAssist.Hint="Seleziona dispositivo di input"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                </StackPanel>

                <!-- Start/Stop Button -->
                <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                        x:Name="StartStopButton"
                        Content="AVVIA"
                        Height="60"
                        FontSize="18"
                        FontWeight="Bold"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        VerticalAlignment="Center"
                        Click="StartStopButton_Click"/>

                <!-- Gain Adjustment -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,10,20,0">
                    <Grid>
                        <TextBlock Text="Guadagno Audio" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,5"
                                   Foreground="{DynamicResource PrimaryHueMidBrush}"
                                   HorizontalAlignment="Left"/>
                        <TextBlock x:Name="GainValueText" 
                                   Text="1.0x" 
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Right"
                                   Foreground="#696969"/>
                    </Grid>
                    <Slider x:Name="GainSlider"
                            Minimum="0.1"
                            Maximum="5.0"
                            Value="1.0"
                            TickFrequency="0.1"
                            IsSnapToTickEnabled="True"
                            Style="{StaticResource MaterialDesignDiscreteSlider}"
                            ValueChanged="GainSlider_ValueChanged"/>
                </StackPanel>

                <!-- Status Bar -->
                <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                        Background="#F5F5F5"
                        CornerRadius="5"
                        Padding="10"
                        Margin="0,15,0,0">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <materialDesign:PackIcon Kind="InformationOutline" 
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,8,0"/>
                            <TextBlock x:Name="StatusText" 
                                       Text="Pronto. Premi AVVIA per iniziare l'accordatura."
                                       VerticalAlignment="Center"
                                       Foreground="#696969"/>
                        </StackPanel>
                        <ProgressBar x:Name="StatusProgressBar"
                                    Style="{StaticResource MaterialDesignCircularProgressBar}"
                                    Width="20"
                                    Height="20"
                                    HorizontalAlignment="Right"
                                    IsIndeterminate="True"
                                    Visibility="Collapsed"/>
                    </Grid>
                </Border>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>